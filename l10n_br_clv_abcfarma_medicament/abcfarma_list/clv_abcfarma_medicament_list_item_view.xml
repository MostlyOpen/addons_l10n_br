<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_clv_abcfarma_medicament_list_item_form" model="ir.ui.view">
            <field name="name">clv_abcfarma_medicament.list.item.form</field>
            <field name="model">clv_abcfarma_medicament.list.item</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="ABCFarma List Itens" version="7.0">
                    <sheet string="ABCFarma List Item">
                        <div class="oe_center" name="center">
                            <!-- Put here related fields -->
                        </div>
                        <!--field name="image_medium" widget='image' class="oe_left oe_avatar"/-->
                        <div class="oe_title">
                            <!--label for="list_id" class="oe_edit_only"/-->
                            <label for="list_id"/>
                            <h2>
                                <field name="list_id" placeholder="List..."/>
                            </h2>
                            <!--label for="medicament_id" class="oe_edit_only"/-->
                            <label for="medicament_id"/>
                            <h2>
                                <field name="medicament_id" placeholder="Medicament..."/>
                            </h2>
                            <label for="order"/>
                            <h3>
                                <field name="order" placeholder="Order..."/>
                            </h3>
                        </div>
                        <div class="oe_right oe_button_box" name="button_box">
                            <!-- Put here related buttons -->
                        </div>
                        <notebook>
                            <page string="Prices">
                                <group>
                                    <group>
                                        <field name="med_pco12"/>
                                        <field name="med_pla12"/>
                                        <field name="med_fra12"/>
                                        <field name="med_pco17"/>
                                        <field name="med_pla17"/>
                                        <field name="med_fra17"/>
                                        <field name="med_pco18"/>
                                        <field name="med_pla18"/>
                                        <field name="med_fra18"/>
                                    </group>
                                    <group>
                                        <field name="med_pco19"/>
                                        <field name="med_pla19"/>
                                        <field name="med_fra19"/>
                                        <field name="med_pco0"/>
                                        <field name="med_pla0"/>
                                        <field name="med_fra0"/>
                                        <field name="med_pcozfm"/>
                                        <field name="med_plazfm"/>
                                        <field name="med_frazfm"/>
                                    </group>
                                    <group>
                                        <field name="med_uni"/>
                                        <field name="med_ipi"/>
                                        <field name="med_dtvig"/>
                                        <field name="exp_13"/>
                                        <field name="med_regims"/>
                                        <field name="med_varpre"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Other Information">
                                <field name="notes" placeholder="Notes..." colspan="4"/>
                            </page>
                            <page string="Settings" groups="clv_base.group_rmanager">
                                <group>
                                    <field name="active"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_clv_abcfarma_medicament_list_item_tree" model="ir.ui.view">
            <field name="name">clv_abcfarma_medicament.list.item.tree</field>
            <field name="model">clv_abcfarma_medicament.list.item</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="ABCFarma List Item">
                    <field name="list_id"/>
                    <field name="medicament_id"/>
                    <field name="order"/>
                    <!--field name="pmc"/-->
                    <!--field name="desconto"/-->
                    <!--field name="preco_venda"/-->
                    <!--field name="included"/-->
                    <field name="notes"/>
                </tree>
            </field>
        </record>
        
        <record id="view_clv_abcfarma_medicament_list_item_search" model="ir.ui.view">
            <field name="name">clv_abcfarma_medicament.list.item.search</field>
            <field name="model">clv_abcfarma_medicament.list.item</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="ABCFarma List Item">
                    <field name="list_id"/>
                    <field name="medicament_id"/>
                    <field name="order"/>
                    <field name="notes"/>
                    <separator/>
                    <group expand="0" string="Group By...">
                        <filter string="ABCFarma List" domain="[]" context="{'group_by': 'list_id'}"/>
                        <!--filter string="Included" domain="[]" context="{'group_by': 'included'}"/-->
                    </group>
                </search>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="act_open_clv_abcfarma_medicament_list_item_view">
            <field name="name">ABCFarma List Itens</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">clv_abcfarma_medicament.list.item</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_clv_abcfarma_medicament_list_item_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new ABCFarma List Item.
              </p>
            </field>
        </record>
        
        <record id="view_clv_abcfarma_medicament_list_form_item" model="ir.ui.view">
            <field name="name">clv_abcfarma_medicament.list.form</field>
            <field name="model">clv_abcfarma_medicament.list</field>
            <field name="inherit_id" ref="view_clv_abcfarma_medicament_list_form"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <label for="description" position="before">
                    <label for="count_items"/>
                    <h3>
                        <field name="count_items"/>
                    </h3>
                </label>
                <page string="Settings" position="before">
                    <page string="ABCFarma List Itens">
                        <group>
                            <field name="abcfarma_list_item_ids" colspan="4" nolabel="1" />
                        </group>
                    </page>
                </page>
            </field>
        </record>

        <record id="view_clv_abcfarma_medicament_list_tree_item" model="ir.ui.view">
            <field name="name">clv_abcfarma_medicament.list.tree</field>
            <field name="model">clv_abcfarma_medicament.list</field>
            <field name="inherit_id" ref="view_clv_abcfarma_medicament_list_tree"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <field name="code" position="after">
                    <field name="count_items"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
